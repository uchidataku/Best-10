{
  "openapi": "3.0.0",
  "info": {
    "title": "Spec",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/rankings": {
      "get": {
        "summary": "Ranking一覧を取得する",
        "tags": [],
        "operationId": "get-rankings",
        "responses": {
          "200": {
            "$ref": "#/components/responses/Rankings"
          }
        }
      },
      "post": {
        "summary": "Rankingを作成する",
        "operationId": "post-rankings",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ranking": {
                    "type": "object",
                    "required": [
                      "title",
                      "genre"
                    ],
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "genre": {
                        "type": "string"
                      }
                    }
                  }
                },
                "required": [
                  "ranking"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/Ranking"
          }
        }
      }
    },
    "/rankings/{:id}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "id",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Rankingを取得する",
        "tags": [],
        "operationId": "get-ranking",
        "responses": {
          "200": {
            "$ref": "#/components/responses/Ranking"
          }
        },
        "description": ""
      }
    },
    "/accounts/{id}": {
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "id",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Accountを取得する",
        "responses": {
          "200": {
            "$ref": "#/components/responses/Account"
          }
        },
        "operationId": "get-accounts-id"
      }
    },
    "/sign_in": {
      "post": {
        "summary": "サインインする",
        "operationId": "post-sign_in",
        "responses": {
          "200": {
            "$ref": "#/components/responses/AccountWithToken"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "account": {
                    "type": "object",
                    "required": [
                      "username",
                      "password"
                    ],
                    "properties": {
                      "username": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                    }
                  }
                },
                "required": [
                  "account"
                ]
              }
            }
          },
          "description": ""
        }
      }
    },
    "/sign_up": {
      "post": {
        "summary": "サインアップする",
        "operationId": "post-sign_up",
        "responses": {
          "201": {
            "$ref": "#/components/responses/AccountWithToken"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "account": {
                    "type": "object",
                    "required": [
                      "username",
                      "password"
                    ],
                    "properties": {
                      "username": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                    }
                  }
                },
                "required": [
                  "account"
                ]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Ranking": {
        "title": "Ranking",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "genre": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "created_at",
          "updated_at",
          "title",
          "genre"
        ]
      },
      "Account": {
        "title": "Account",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "is_system_admin": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "created_at",
          "updated_at",
          "username",
          "is_system_admin"
        ]
      },
      "RankingsRes": {
        "type": "object",
        "properties": {
          "rankings": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Ranking"
                },
                {
                  "type": "object",
                  "properties": {
                    "creator": {
                      "$ref": "#/components/schemas/Account"
                    }
                  },
                  "required": [
                    "creator"
                  ]
                }
              ]
            }
          }
        },
        "required": [
          "rankings"
        ]
      },
      "Item": {
        "title": "Item",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "likes_count": {
            "type": "integer"
          },
          "is_liked": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "created_at",
          "updated_at",
          "name",
          "likes_count",
          "is_liked"
        ]
      },
      "RankingRes": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Ranking"
          },
          {
            "type": "object",
            "properties": {
              "creator": {
                "$ref": "#/components/schemas/Account"
              },
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            },
            "required": [
              "creator",
              "items"
            ]
          }
        ]
      },
      "AccountRes": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Account"
          },
          {
            "type": "object",
            "properties": {
              "rankings": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Ranking"
                }
              }
            },
            "required": [
              "rankings"
            ]
          }
        ]
      }
    },
    "responses": {
      "Ranking": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/RankingRes"
            }
          }
        }
      },
      "Rankings": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/RankingsRes"
            }
          }
        }
      },
      "Account": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/AccountRes"
            }
          }
        }
      },
      "AccountWithToken": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "account": {
                  "$ref": "#/components/schemas/AccountRes"
                },
                "token": {
                  "type": "string"
                }
              },
              "required": [
                "account",
                "token"
              ]
            }
          }
        }
      }
    }
  }
}