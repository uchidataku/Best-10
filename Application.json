{
  "openapi": "3.0.0",
  "info": {
    "title": "Spec",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/rankings": {
      "get": {
        "summary": "Ranking一覧を取得する",
        "tags": [],
        "operationId": "get-rankings",
        "responses": {
          "200": {
            "$ref": "#/components/responses/Rankings"
          }
        }
      },
      "post": {
        "summary": "Rankingを作成する",
        "operationId": "post-rankings",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ranking": {
                    "type": "object",
                    "required": [
                      "title",
                      "genre"
                    ],
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "genre": {
                        "type": "string"
                      }
                    }
                  }
                },
                "required": [
                  "ranking"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/Ranking"
          }
        }
      }
    },
    "/rankings/{:id}": {
      "get": {
        "summary": "Rankingを取得する",
        "tags": [],
        "operationId": "get-ranking",
        "responses": {
          "200": {
            "$ref": "#/components/responses/Ranking"
          }
        },
        "description": ""
      }
    }
  },
  "components": {
    "schemas": {
      "Ranking": {
        "title": "Ranking",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "genre": {
            "type": "string"
          },
          "hoge": {
            "type": [
              "string",
              "null"
            ],
            "nullable": true
          }
        },
        "required": [
          "id",
          "created_at",
          "updated_at",
          "title",
          "genre",
          "hoge"
        ]
      },
      "Account": {
        "title": "Account",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "created_at",
          "updated_at",
          "username"
        ]
      },
      "Item": {
        "title": "Item",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "created_at",
          "updated_at",
          "name"
        ]
      },
      "Rankings": {
        "type": "object",
        "properties": {
          "rankings": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Ranking"
                },
                {
                  "type": "object",
                  "properties": {
                    "creator": {
                      "$ref": "#/components/schemas/Account"
                    },
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Item"
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "RankingRes": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Ranking"
          },
          {
            "type": "object",
            "properties": {
              "creator": {
                "$ref": "#/components/schemas/Account"
              },
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          }
        ]
      }
    },
    "responses": {
      "Ranking": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/RankingRes"
            }
          }
        }
      },
      "Rankings": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Rankings"
            }
          }
        }
      }
    }
  }
}